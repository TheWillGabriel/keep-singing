<h1><%= t('.change_your_password') %></h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= bootstrap_devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.password_field :password, autofocus: true, placeholder: 'New password', class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, placeholder: 'Confirm new password',
                                                 autocomplete: 'off', class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.submit t('.change_my_password'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
